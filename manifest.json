{
  "manifest_version": 3,
  "name": "Color Blindness Pal",
  "short_name": "Color-blind Pal",
  "version": "1.1",
  "description": "Adjust website colors to aid color blindness.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "incognito": "split",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
